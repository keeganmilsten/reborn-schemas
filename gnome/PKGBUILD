# Maintainer: Antergos Devs <devs@antergos.com>

pkgname=reborn-deepin-setup
_pkgname=reborn-desktop-settings
pkgver=1.1
pkgrel=1.1
pkgdesc="Setup configuration for Gnome Reborn"
url="https://github.com/keeganmilsten/Reborn-Packages/tree/master/gschema%20files/gnome"
arch=('any')
license=('GPL2')
depends=('deepin-desktop-base' 'gsettings-desktop-schemas' 'dconf')
#replaces=('antergos-desktop' 'antergos-gsettings')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/keeganmilsten/${_pkgname}/archive/v${pkgver}.tar.gz")
install=${pkgname}.install

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"

    install -d "${pkgdir}/usr/share/glib-2.0/schemas"

    install -Dm644 gschema files/gnome/95_gnome.gschema.override \
        "${pkgdir}/usr/share/glib-2.0/schemas/95_gnome.gschema.override"
}
